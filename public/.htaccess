RewriteEngine On

# Canonical host + HTTPS (skip localhost for local development)
RewriteCond %{HTTP_HOST} !^(localhost|127\.0\.0\.1)(:\d+)?$ [NC]
RewriteCond %{HTTP_HOST} !^acl-smartsoftware\.ro$ [NC,OR]
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://acl-smartsoftware.ro%{REQUEST_URI} [R=301,L]

# Trailing slash policy: no trailing slash except homepage
RewriteCond %{REQUEST_URI} !^/$
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.+)/$ /$1 [R=301,L]

# If the requested file or directory exists, serve it directly
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Otherwise route everything to index.php
RewriteRule ^ index.php [L]
